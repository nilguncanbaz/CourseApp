@model CourseStudentsViewModel
@{
    Layout = null;
}
@{
    var classname = Model.Students.Count>2 ? "popular" : null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Index</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">  
    <style>
        .popular{
            color:green;
            font-weight:700;
        }
    </style>
</head>
<body>
    
    <h1 class="@classname">@Model.Course.Name</h1>
    @if (Model.Students.Count==0)
    {
        <text>Kursa katılımcı yok.</text>
    }
    else
    { 
        
    <ul>
        @foreach (var item in Model.Students)
        {
            <li>
                @item.Name
            </li>
        }
    </ul>
    }

    
</body>
</html>