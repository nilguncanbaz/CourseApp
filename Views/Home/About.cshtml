@model ProductsCategoriesViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Aboout</title>
    <style>
        #header {
            width: 900px;
            height: 100px;
            border-radius: 20px;
            background: blue;
            padding: 20px;
            margin-bottom: 10px;
        }

        #menu {
            width: 200px;
            height: 300px;
            border-radius: 20px;
            background: blue;
            padding: 20px;
            float: left;
        }

        ul {
            margin: 0;
            padding: 0;
        }

        #menu li {
            list-style: none;
            padding: 10px;
        }

        #menu a {
            color: white;
            text-decoration: none;
        }

        #content {
            float: left;
            width: 650px;
            height: 300px;
            border-radius: 20px;
            background: blue;
            padding: 20px;
            margin-left: 10px;
        }


        #footer {
            width: 900px;
            height: 100px;
            border-radius: 20px;
            background: blue;
            padding: 20px;
            margin-top: 10px;
        }
    </style>
</head>
<body>

    <div id="header">
        Header
    </div>

  @Html.Partial("_Menu",Model.Categories)

    <div id="content">
        Content
    </div>

    <div style="clear:both;"></div>

    <div id="footer">
        Footer
    </div>

</body>
</html>